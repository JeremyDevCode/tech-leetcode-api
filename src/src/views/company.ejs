<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= companyName %> LeetCode Problems
  </title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 font-sans min-h-screen flex justify-center items-start py-6">
  <div class="w-full max-w-4xl flex flex-col gap-6">

    <h1 class="text-2xl font-bold text-center">
      <%= companyName %> LeetCode Problems
    </h1>

    <% const levelColors={ easy: 'green' , medium: 'yellow' , hard: 'red' }; %>

      <% ['easy', 'medium' , 'hard' ].forEach(level=> { %>
        <!-- Level heading colored by difficulty -->
        <h2 class="text-xl font-semibold mt-6 mb-4 capitalize text-<%= levelColors[level] %>-600">
          <%= level %>
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% (problems[level] || []).forEach(p=> { %>
            <a href="/interviews/<%= companyName.toLowerCase().replace(/\s+/g,'-') %>/<%= p.slug %>" class="block">
              <div class="bg-white rounded-xl shadow p-4 hover:shadow-lg transition cursor-pointer">
                <h3 class="font-bold text-lg mb-2">
                  <%= p.title %>
                </h3>
                <p class="text-gray-700 mb-2"><strong>Production Use:</strong>
                  <%= p.production_use %>
                </p>
                <div class="flex flex-wrap gap-2">
                  <% (p.common_pattern || []).forEach(tag=> { %>
                    <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm">
                      <%= tag %>
                    </span>
                    <% }) %>
                </div>
              </div>
            </a>
            <% }) %>
        </div>
        <% }) %>

  </div>
</body>

</html>